<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title</title>
	@Styles.Render("~/styles/bootstrap")
	@Styles.Render("~/styles/custom")
	@Scripts.Render("~/scripts/modernizr")
</head>
<body class="white-on-black">
	<div class="site-body container-fluid">
		@RenderBody()
	</div>
	<footer id="site-footer">
		<div class="text-center">&copy; @DateTime.Now.Year - Chess 4 2</div>
	</footer>
	@Scripts.Render("~/scripts/jquery")
	@Scripts.Render("~/scripts/jquery-validate")
	@Scripts.Render("~/scripts/jquery-ui")
	@Scripts.Render("~/scripts/bootstrap")
	@Scripts.Render("~/scripts/signalr")
	<script src="~/signalr/hubs"></script>
	@Scripts.Render("~/scripts/custom")
	@RenderSection("scripts", required: false)
</body>
</html>
